<% title "Users" %>

<table>
	<tr>
		<th>Username</th>
		<th>Email</th>
		<th>Twitter</th>
		<th>Name</th>
		<th>Bio</th>
	</tr>
	<% for user in @users %>
	<tr>
		<td><%=h user.username %></td>
		<td><%=h user.email %></td>
		<td><%=h user.twitter_id %></td>
		<td><%=h user.name %></td>
		<td><%=h user.bio %></td>
		<td><%= link_to "Show", user %></td>
		<td><%= link_to "Edit", edit_user_path(user) %></td>
		<td><%= link_to "Destroy", user, :confirm => 'Are you sure?', :method => :delete %></td>
	</tr>
	<% end %>
</table>
<p><%= link_to "New User", new_user_path %></p>
